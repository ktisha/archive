function OnRegionSelectFocus(oSelect)
{
	if (oSelect == null)
		return false;
	var Idx = parseInt(oSelect.selectedIndex);
	var sValue = oSelect.item(Idx).value;
	if (sValue == "http://russiaregionpress.ru/")
	{
		oSelect.remove(Idx);
		oSelect.selectedIndex = oSelect.length + 1;
	}
}
function OnRegionChanged(oSelect)
{
	if (oSelect == null)
		return false;
	var Idx = parseInt(oSelect.selectedIndex);
	var sValue = oSelect.item(Idx).value;
	document.location = sValue;
}
function OnForumSelected(oSelect)
{
	if (oSelect == null)
		return false;
	var Idx = parseInt(oSelect.selectedIndex);
	var sValue = oSelect.item(Idx).value;
	if (sValue != "off")
		document.location = sValue;
}
</script>

